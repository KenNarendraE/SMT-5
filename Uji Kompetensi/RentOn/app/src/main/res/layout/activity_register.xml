<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="clip_horizontal"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/righteous"
        android:text="Nama"
        android:textColor="#757575"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_yellow"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#757575"
        android:textColorHint="@color/l_gray" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/righteous"
        android:text="Email"
        android:textColor="#757575"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_yellow"
        android:ems="10"
        android:inputType="textPersonName"
        android:digits="0123456789@.qwertzuiopasdfghjklyxcvbnm"
        android:paddingLeft="10dp"
        android:textColor="#757575"
        android:textColorHint="@color/l_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/righteous"
        android:text="Password"
        android:textColor="#757575"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etPw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_yellow"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="password minimal 8 digit"
        android:digits="0123456789.qwertzuiopasdfghjklyxcvbnm"
        android:paddingLeft="10dp"
        android:textColor="#757575"
        android:textColorHint="@color/l_gray" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/righteous"
        android:text="Alamat"
        android:textColor="#757575"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etAl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_yellow"
        android:drawableRight="@drawable/ic_location"
        android:paddingRight="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#757575"
        android:textColorHint="@color/l_gray" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/righteous"
        android:text="Nomor Telepon"
        android:textColor="#757575"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etTp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_yellow"
        android:ems="10"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColor="#757575"
        android:textColorHint="@color/l_gray" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/righteous"
        android:text="Umur"
        android:textColor="#757575"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etUmur"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_yellow"
        android:ems="10"
        android:hint="Dalam satuan Tahun"
        android:inputType="phone"
        android:drawableRight="@drawable/ic_tanggal"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:textColor="#757575"
        android:textColorHint="@color/l_gray" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:background="@drawable/confirm_round"
            android:fontFamily="@font/righteous"
            android:foregroundGravity="bottom"
            android:onClick="btnLogin"
            android:text="Konfirmasi"
            android:textColor="#757575"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

